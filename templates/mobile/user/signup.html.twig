{% extends 'mobile/_base_layout/base.html.twig' %}

{% block title %}サインアップ{% endblock %}

{% block importmap %}
    {{ importmap(['mobile-base-layout', 'mobile-user-signup']) }}
{% endblock %}

{% block body %}
    <main>
        <div>
            <h1 class="page-title">サインアップ</h1>
        </div>

        <div class="singup-form-content">
            {{ form_start(form) }}
                <div>
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>

                <div>
                    {{ form_label(form.password.first) }}
                    {{ form_widget(form.password.first) }}
                    {{ form_errors(form.password.first) }}
                </div>

                <div>
                    {{ form_label(form.password.second) }}
                    {{ form_widget(form.password.second) }}
                    {{ form_errors(form.password.second) }}
                </div>
            {{ form_end(form) }}

            <div class="cancel-button">
                <a href="{{ path('dashboard_top') }}">キャンセル</a>
            </div>
        </div>

    </main>
{% endblock %}